{
  "extends": ["next", "next/core-web-vitals"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        },
        "ecmaVersion": 2018,
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "rules": {
        "no-console": 0,
        "import/extensions": 0,
        "import/no-unresolved": 0,
        "react/jsx-filename-extension": 0,
        "indent": 0,
        "quotes": [2, "single"]
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
